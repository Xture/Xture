.f-list-item
  padding: 8px
  border-bottom 1px solid grey
  border-top 1px solid grey
  color #212121
  text-decoration: none
  display: block

.f-list-item-title
  font-weight bold
  margin-bottom 8px
  display block
  text-overflow ellipsis
  overflow: hidden
  font-size 24px

.f-list-item-descr
  display block
  height 36px
  font-size 14px
  text-overflow ellipsis
  overflow hidden
